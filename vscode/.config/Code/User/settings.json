// {
//     "workbench.colorTheme": "Nord",
//     "vscode-neovim.neovimExecutablePaths.linux": "/bin/nvim",
//     "window.menuBarVisibility": "toggle"
// }
{
    // Editor settings
    // "editor.fontFamily": "Iosevka",
    "editor.fontFamily": "IosevkaLuca",
    "editor.fontLigatures": true,
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.activityBar.visible": true,
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "editor.tabSize": 4,

    // Ligatures per language
    "[c]": {
      "editor.fontLigatures": "'calt' 0, 'CLIK' 1"
    },
    "[java]": {
      "editor.fontLigatures": "'calt' 0, 'JAVA' 1"
    },
    "[ocaml]": {
      "editor.fontLigatures": "'calt' 0, 'MLXX' 1"
    },
    "[haskell]": {
      "editor.fontLigatures": "'calt' 0, 'HSKL' 1"
    },

    "[latex]": {
      // "editor.fontFamily": "Iosevka Etoile",
      // "editor.fontSize": 15,
      "editor.wordWrap": "on"
    },

    // Python related settings
    // "python.pythonPath": "python3",

    // Latex settings
    "latex-workshop.view.pdf.viewer": "tab",
    // "sync.gist": "473859d2d241e9bd87d7dd32b0118795",
    "breadcrumbs.enabled": true,
    "editor.lineNumbers": "relative",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.fontSize": 16,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "latex-workshop.latex.tools": [
      {
        "name": "latexmk",
        "command": "latexmk",
        "args": [
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "--shell-escape",
          "-pdf",
          "%DOC%"
        ]
      },
      {
        "name": "pdflatex",
        "command": "pdflatex",
        "args": [
          "--shell-escape",
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "%DOC%"
        ]
      },
      {
        "name": "bibtex",
        "command": "bibtex",
        "args": [
          "%DOCFILE%"
        ],
        "env": {}
      }
    ],

    "[arm]": {
        "editor.tabSize": 2,
    },
    "editor.tokenColorCustomizations": {
      "[Nord]": {
        "textMateRules": [
          {
              "scope": [
                "constant.other.haskell"
              ], 
              "settings": {
                "foreground": "#8fbcbb",
              }
          },
          {
            "scope": [
              "entity.name.function.haskell",
              "meta.declaration.instance.haskell",
              "storage.type.haskell"
            ], 
            "settings": {
              "foreground": "#88c0d0",
            }
          },
          // {
          //   "scope": [
          //     "entity.name.namespace.haskell"
          //   ], 
          //   "settings": {
          //     "foreground": "#81a1c1",
          //   }
          // },
          {
            "scope": [
              "meta.import.haskell"
            ], 
            "settings": {
              "foreground": "#d8dee9",
            }
          },
        ]
      },
      "[NordPastel]": {
        "textMateRules": [
          {
            "scope": [
              "constant.other.haskell"
            ], 
            "settings": {
              // "foreground": "#8fbcbb",
              "foreground": "#88C3C2"
            }
          },
          {
            "scope": [
              "variable.other.generic-type.haskell"
            ],
            "settings": {
              // "foreground": "#FCA3AB"
              "foreground": "#ADD3DE",
              "fontStyle": "italic"
            }
          },
          {
            "scope": [
              "storage.type.haskell"
            ],
            "settings": {
              // "foreground": "#8eb1dd",
              // "foreground": "#76ADAC"
              // "foreground": "#81A1C1",
              "foreground": "#88C0D0",
              "fontStyle": "bold"
            }
          },
          {
            "scope": [
              "keyword.operator.function.infix.haskell"
            ],
            "settings": {
              "foreground": "#FBEBBB",
              "fontStyle": "italic"
            }
          },
          {
            "scope": [
              "keyword.other.preprocessor.extension.haskell"
            ],
            "settings": {
              "foreground": "#5E81AC",
              // "fontStyle": "bold"
            }
          },
          {
            "scope": [
              "entity.name.function.haskell",
              "meta.declaration.instance.haskell"
              // "storage.type.haskell"
            ], 
            "settings": {
              "foreground": "#88ccd0",
              // "foreground": "#76ADAD"
              // "foreground": "#6EB5B4"
              // "foreground": "#EDE4C9"
            }
          },
          // {
          //   "scope": [
          //     "entity.name.namespace.haskell"
          //   ], 
          //   "settings": {
          //     "foreground": "#81a1c1",
          //   }
          // },
          {
            "scope": [
              "meta.import.haskell"
            ], 
            "settings": {
              "foreground": "#d8dee9",
            }
          },
        ]
      }
    },
    "vscode-neovim.neovimExecutablePaths.linux": "/bin/nvim",
    "agdaMode.agdaPath": "/home/lucadp/.local/bin/agda",
    "python.languageServer": "Pylance",
    "workbench.colorTheme": "NordPastel",
    "C_Cpp.default.includePath": [
      "/usr/lib/gcc/x86_64-pc-linux-gnu/10.2.0/include",
      "/usr/local/include",
      "/usr/lib/gcc/x86_64-pc-linux-gnu/10.2.0/include-fixed",
      "/usr/include"
     ]
}